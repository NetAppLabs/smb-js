{
  "name": "@netapplabs/smb-js",
  "version": "0.8.9",
  "description": "smb js",
  "main": "indax.js",
  "repository": "git@github.com:NetAppLabs/smb-js.git",
  "license": "Apache-2.0",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api"
  ],
  "files": [
    "indax.ts",
    "index.d.ts",
    "index.js",
    "*.node",
    "lib"
  ],
  "napi": {
    "name": "smb-js",
    "triples": {
      "defaults": false,
      "additional": [
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node -r @swc-node/register benchmark/bench.ts",
    "build-all": "npm run build-sh && npm run build-tsc",
    "build": "./build.sh",
    "build-tsc": "npx tsc -p .",
    "build-napi": "napi build --platform --release --pipe \"prettier -w\"",
    "build:darwin:x64": "napi build --platform --release --target x86_64-apple-darwin --pipe \"prettier -w\"",
    "build:darwin:arm64": "napi build --platform --release --target aarch64-apple-darwin --pipe \"prettier -w\"",
    "build:linux:x64": "napi build --platform --release --target x86_64-unknown-linux-gnu --pipe \"prettier -w\"",
    "build:linux:arm64": "napi build --platform --release --target aarch64-unknown-linux-gnu --pipe \"prettier -w\"",
    "build:debug": "napi build --platform --pipe \"prettier -w\"",
    "format": "run-p format:prettier format:rs",
    "format:prettier": "prettier . -w",
    "format:rs": "cargo fmt",
    "lint": "eslint . -c ./.eslintrc.yml",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "npm run test-cargo && npm run test-sh",
    "test-sh": "./scripts/test.sh",
    "test-cargo": "./build.sh test",
    "test-ava": "ava",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@swc-node/register": "^1.5.1",
    "@swc/core": "^1.9.2",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "ava": "^4.3.0",
    "benny": "^3.7.1",
    "chalk": "^5.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint -c .eslintrc.yml --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ]
  },
  "ava": {
    "require": [
      "@swc-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "environmentVariables": {
      "TS_NODE_PROJECT": "./tsconfig.json"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "packageManager": "yarn@3.2.1"
}
